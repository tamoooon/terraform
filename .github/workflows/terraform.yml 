name: Deploy Bastion EC2

on:
  workflow_dispatch:
    inputs:
      action:
        description: 'apply or destroy'
        required: true
        default: 'apply'

jobs:
  deploy-bastion:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Setup Terraform
        uses: hashicorp/setup-terraform@v2

      - name: Run Make Target
        run: |
          make bastion-${{ github.event.inputs.action }}
